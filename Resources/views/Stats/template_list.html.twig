{% extends '@PumukitNewAdminBundle/layout.html.twig' %}

{% block body %}

    <h3 class="cab_body_div">
        <ul class="breadcrumb" style="margin-bottom: 5px;">
            <li class="active">
                <a href="{{ path('pumukit_youtube_stat_index') }}">YouTube</a> /
                {{ "YouTube List"|trans }} ({{ title|trans|capitalize }})
            </li>
        </ul>
    </h3>

    <div class="well">
        {% if youtubeDocuments|length > 0 %}
            <table class="table table-striped">
                <thead>
                    {% include "@PumukitYoutubeBundle/Stats/template_list_head.html.twig" %}
                </thead>
                <tbody>
                    {% include '@PumukitYoutubeBundle/Stats/template_list_body.html.twig' %}
                </tbody>
            </table>

            <div class="text-center">
                {{ pagerfanta(youtubeDocuments, 'twitter_bootstrap3') }}
            </div>

        {% else %}
            <strong>
                {{ "Without results"|trans }}
            </strong>
        {% endif %}
    </div>
{% endblock %}
