<h3 class="cab_body_div">
    <ul class="breadcrumb" style="margin-bottom: 5px;">
        <li class="active">
            {{ "YouTube Accounts"|trans }}
        </li>
    </ul>
</h3>

<div class="row">
    <div class="col-md-12">
        <div class="row">
            {% for account in youtubeAccounts %}
                <div class="col-md-4 col-sm-6 col-xs-12">
                    <a  class="youtube_status_link_list" href="{{ path('pumukit_youtube_stat_account_list', {'account' : account.getProperty('login')}) }}">
                        <div class="info-box">
                            <span class="info-box-icon bg-pumukit">
                                <i class="glyphicon glyphicon-user"></i>
                            </span>
                            <div class="info-box-content">
                                <span class="info-box-text" data-toggle="tooltip" data-placement="bottom" title="{{ account.getTitle() }}">{{ account.getTitle() }}</span>
                                <span class="info-box-number">
                                    {% set playlistNumber = account.getChildren()|length %}
                                    {{ playlistNumber }}
                                    <small>
                                        {{ "{0} playlist|{1} playlist|]1,Inf] playlists"|trans({'%count%': playlistNumber }) }}
                                    </small>

                                    <br />
                                    {% set videoNumber = accountsStats[account.getProperty('login')]|length %}
                                    {{ videoNumber }}
                                    <small>
                                        {{ "{0} videos|{1} video|]1,Inf] videos"|trans({'%count%': videoNumber }) }}
                                    </small>
                                </span>
                            </div>
                        </div>
                    </a>
                </div>
            {% endfor %}
        </div>
    </div>
</div>
